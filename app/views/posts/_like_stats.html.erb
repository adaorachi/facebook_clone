<li class="dropdown nav-item">
  <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" title="Friend Requests" aria-haspopup="true" aria-expanded="false">
    <%= content_tag :span, image_tag("like.png", :alt => "Like", :width => '20') %>
  </a>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
    <% post.liked_by_users.each do |user| %>
      <a class="dropdown-item" href="<%= user_path(user) %>">
        <div class="post-creator">
        <span><%= gravatar_for(user, size: 40 ) %></span>
        <div class="post-creator-info">
          <p class="card-subtitle ">
            <%= user.name %>
          </p>          
        </div>
      </div>
      </a>
    <% end %>
  </div>
</li>
<li class="nav-item ml-2">
  <span class="nav-link">
    <%= liked_post_user(post) %>
  </span>
</li>
