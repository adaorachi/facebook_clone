<div class="container-fluid newsfeed py-2">
  <div class="row right-column">

  <%= render 'shared/sidebar'%>
  
    <div class="col-8">
      <div class="card">
        <% if outgoing_requests[0] %>
          <div class="card-header d-flex flex-column">
            <span>Friend Requests Sent</span>
            <span><%= link_to 'View Recieved Request', received_request_path %></span>
          </div>
          <ul class="list-group list-group-flush non-friends-list">
            <% current_user.pending_requests_to_users.each do |user| %>
              <li class="list-group-item">
                <div class="post-creator">
                <span><%= link_to user_image(user, 55), user_path(user), class: "non-friend-image" %></span>
                  <div class="post-creator-info d-flex justify-content-between align-items-center">
                    <p class="card-subtitle ">
                      <%= link_to user.name, user_path(user) %>
                    </p>
                      <%= button_tag fa_icon("user-minus", text: "Friend Request Sent"), class: "btn btn-sm btn-grey friend-btn", disabled: true %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>

          <% else %>
          <div class="card-header d-flex flex-column">
            <span>You have no sent request.</span>
            <span><%= link_to 'View Received Request', received_request_path %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>