<div class="container-fluid home-body">
  <div class="row">
    <div class="col-6">
    <div class="welcome-info">
      <h1>Facebook helps you connect and share with the people in your life.</h1>
    </div>
    <div class="image">
      <img class="img" src="https://static.xx.fbcdn.net/rsrc.php/v3/yi/r/OBaVg52wtTZ.png" alt="" width="537" height="195">
    </div>
    </div>
    <div class="col-6">
      <div class="signup-form">
        <h2>Create an Account</h2>
        <h6>It's quick and easy.</h6>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.text_field :firstname, class: "form-control", placeholder: 'First Name' %> 
            </div>
            <div class="form-group col-md-6">
              <%= f.text_field :surname, class: "form-control", placeholder: 'Surname' %> 
            </div>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email Address', class: "form-control" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: "form-control" %>
          </div>

          <div class="form-group birthdate">
            <%= f.label :birthdate, "Birthday"%>
            <%= f.date_field :birthdate, class: "form-control", value: "1984-05-12" %>
          </div>

          <fieldset class="form-group">
            <legend class="col-form-label">Gender</legend>
            <div class="radio-gender">
              <div class="form-check">
                <%= f.radio_button :gender, "female", class: "form-check-input" %>
                <%= f.label :gender_female, "Female" , class: "form-check-label" %>
              </div>
              <div class="form-check male">
                <%= f.radio_button :gender, "male", class: "form-check-input" %>
                <%= f.label :gender_male, "Male" , class: "form-check-label" %>
              </div>
            </div>
          </fieldset>
          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn btn-success signup-button' %>
          </div>


        <% end %>

        
        
      </div>
    </div>
  </div>
</div>
