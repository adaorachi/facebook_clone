<!DOCTYPE html>
<html>
  <head>
    <title>FaceBookClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header'%>
    <main class="main">
      <div class="flashmsg">
        <%= render 'layouts/flashmsg'%>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
